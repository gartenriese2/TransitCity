<Window x:Class="TransitCity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:transitCity="clr-namespace:TransitCity"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowState="Maximized"
        WindowStyle="None"
        Background="LightGray"
        d:DataContext="{d:DesignInstance Type=transitCity:MainWindowViewModel, IsDesignTimeCreatable=True}"
        d:DesignWidth="2560" d:DesignHeight="1440">
    <ContentControl Content="{Binding Content}"/>
</Window>
