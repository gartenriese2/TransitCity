<Window x:Class="WpfTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfTestApp="clr-namespace:WpfTestApp"
        xmlns:panel="clr-namespace:WpfDrawing.Panel;assembly=WpfDrawing"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <wpfTestApp:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="0,16"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <TextBlock Text="{Binding WeekTime}"
                       FontSize="32"/>
            <Button Margin="16,0"
                    Width="32"
                    FontSize="32"
                    Command="{Binding PlusCommand}">
                <TextBlock Text="+"/>
            </Button>
            <Button Width="32"
                    FontSize="32"
                    Command="{Binding MinusCommand}">
                <TextBlock Text="-"/>
            </Button>
        </StackPanel>
        
        <panel:PanelControl Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Objects="{Binding PanelObjects}"/>
    </Grid>
    
</Window>
