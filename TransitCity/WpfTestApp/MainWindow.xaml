<Window x:Class="WpfTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfTestApp="clr-namespace:WpfTestApp"
        xmlns:panel="clr-namespace:WpfDrawing.Panel;assembly=WpfDrawing"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <wpfTestApp:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                    Margin="0,16"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <TextBlock Text="{Binding WeekTime}"
                       FontSize="32"/>
            <Button Margin="8,0"
                    Width="32"
                    FontSize="32"
                    Command="{Binding PlusCommand}">
                <TextBlock Text="+"/>
            </Button>
            <Button Margin="8,0"
                    Width="32"
                    FontSize="32"
                    Command="{Binding MinusCommand}">
                <TextBlock Text="-"/>
            </Button>
            <Button Margin="8,0"
                    Width="100"
                    FontSize="20"
                    Command="{Binding ZoomInCommand}"
                    Content="Zoom in"/>
            <Button Margin="8,0"
                    Width="100"
                    FontSize="20"
                    Command="{Binding ZoomOutCommand}"
                    Content="Zoom out"/>
        </StackPanel>
        
        <TextBlock Grid.Row="0" Grid.Column="1"
                   Width="32"
                   TextAlignment="Right">
            <Run Text="{Binding SimulationTime, StringFormat=N0}"/>
            <Run Text="ms"/>
        </TextBlock>

        <panel:PanelControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Objects="{Binding PanelObjects}"
                            Zoom="{Binding Zoom}"
                            MinZoom="{Binding MinZoom, Mode=OneWayToSource}"
                            MaxZoom="{Binding MaxZoom, Mode=OneWayToSource}"/>
    </Grid>
    
</Window>
