<UserControl x:Class="WpfDrawing.Panel.PanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:panel="clr-namespace:WpfDrawing.Panel"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <panel:PanelVisuals Width="800" Height="800"
                        ItemsSource="{Binding Objects, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Zoom="{Binding Zoom, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        MinZoom="{Binding MinZoom, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        MaxZoom="{Binding MaxZoom, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
</UserControl>
