<Window x:Class="CityEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cityEditor="clr-namespace:CityEditor"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance cityEditor:MainWindowViewModel, IsDesignTimeCreatable=False}"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Margin="8,4" Width="100" Content="New"/>
            <Button Margin="8,4" Width="100" Content="Load"/>
            <Button Margin="8,4" Width="100" Content="Save"/>
        </StackPanel>
    </Grid>
</Window>
